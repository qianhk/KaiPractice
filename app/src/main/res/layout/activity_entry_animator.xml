<?xml version="1.0" encoding="utf-8"?>

<com.njnu.kai.practice.entry.LightingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/entry_lighting_layout">

    <com.njnu.kai.practice.entry.LogoView
        android:id="@+id/imageview_logo"
        android:layout_width="@dimen/image_size_entry_logo"
        android:layout_height="@dimen/image_size_entry_logo"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/imageview_logo"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/entry_first_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textColor="@android:color/white"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/entry_second_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textColor="@android:color/white"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/entry_third_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动"
            android:textColor="@android:color/white"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/entry_fourth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="听"
            android:textColor="@android:color/white"
            android:textSize="36dp"

            />
    </LinearLayout>

    <ImageView
        android:src="@drawable/ic_launcher"
        android:layout_centerInParent="true"
        android:layout_width="64dp"
        android:visibility="invisible"
        android:layout_height="64dp" />
</com.njnu.kai.practice.entry.LightingLayout>