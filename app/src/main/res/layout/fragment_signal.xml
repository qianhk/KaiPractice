<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.njnu.kai.practice.animator.SignalView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="levelåŠ 500"/>

        <Button
            android:id="@+id/btn_frame_callback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FrameCallback"/>

        <Button
            android:id="@+id/btn_frame_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sFrameDelay"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_drawable"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />

        <View
            android:id="@+id/view_drawable2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="32dp"
            />

    </LinearLayout>


</LinearLayout>